{
	"partitions": [
		{
			"type": "BOOT",
			"size": "64M"
		},
		{
			"type": "20",
			"size": "32M",
			"fs": "fat",
			"content" : [
				{
					"from": "./install.sh",
					"to": "/install.sh"
				},
				{
					"from": "./tests/hello-uefi.efi",
					"to": "/hello-uefi.efi"
				}
			]
		}
	],
	"config": {
		"loglevel": "DEBUG",
		"timeout": 5,
		"menuclear": false,
		"exit": true,
		"editconfig": true,
		"bootentries": [
			{
				"name": "Self",
				"partition": 1,
				"fstype": "FAT",
				"ostype": "UEFI",
				"path": "/EFI/BOOT/BOOTX64.EFI"
			},
			{
				"name": "Hello UEFI!",
				"partition": 2,
				"fstype": "FAT",
				"ostype": "UEFI",
				"path": "/hello-uefi.efi"
			},
			{
				"name": "USB",
				"removable": true,
				"partition": 1,
				"fstype": "FAT",
				"ostype": "UEFI",
				"path": "/usb.efi"
			},
			{
				"name": "install.sh",
				"partition": 2,
				"fstype": "FAT",
				"ostype": "READ",
				"path": "/install.sh"
			}
		]
	}
}